<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edward_costache.stay_fitrpg">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StayFitRPG">
        <activity android:name=".OnlineMenuActivity"></activity>
        <activity android:name=".exercises.RunningExerciseActivity" />
        <activity android:name=".exercises.SquatExerciseActivity" />
        <activity android:name=".exercises.SitupExerciseActivity" />
        <activity android:name=".exercises.PushupExerciseActivity" />
        <activity android:name=".exercises.SquatMenuActivity" />
        <activity android:name=".exercises.SitupMenuActivity" />
        <activity android:name=".exercises.RunningMenuActivity" />
        <activity android:name=".EasterEggActivity" />
        <activity android:name=".exercises.PushupMenuActivity" />
        <activity android:name=".ExercisesActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>